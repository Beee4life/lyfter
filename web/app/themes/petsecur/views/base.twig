<!DOCTYPE html>
<!--[if lte IE 9]><html class="no-js legacy" {{ site.language_attributes }}><![endif]-->
<!--[if gt IE 9]><!--><html class="no-js" {{ site.language_attributes }}><!--<![endif]-->
<head>
    {# wp_title is added by filter in wp_head (by Yoast SEO) #}
    {# head throws a warning above (in PhpStorm, for missing title #}
    <meta charset="{{ site.charset }}" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gabarito:wght@400..900&display=swap" rel="stylesheet">

    {{ function('wp_head') }}
    {% include 'partials/js/google-tag-manager.twig' %}
</head>

<body class="{{ body_class }}" itemscope itemtype="//schema.org/WebPage">
    <div id="background"></div>
    {% include 'partials/js/google-tag-manager-ns.twig' %}
    {% include 'partials/topmenu.twig' %}

    <main class="site__content">
        <div class="overlay"></div>
        {% block base_content %}{% endblock %}
    </main>

    {{ function('wp_footer') }}
    {% block scripts %}{% endblock %}
</body>
</html>
