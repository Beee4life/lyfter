{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "composer", "roots", "wordpress", "wp", "wp-config"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": ["wpackagist-plugin/*", "wpackagist-theme/*"]
    },
    {
      "type":    "package",
      "package": {
        "name":    "hube2/acf-input-counter",
        "type":    "wordpress-plugin",
        "version": "1.5",
        "dist":    {
          "type": "zip",
          "url":  "https://github.com/hube2/acf-input-counter/archive/master.zip"
        }
      }
    },
    {
      "type":"composer",
      "url":"https://connect.advancedcustomfields.com"
    },
    {
      "type": "vcs",
      "url": "https://github.com/Beee4life/b3-onboarding"
    }
  ],
  "require":      {
    "php":                                     ">=8.2",
    "ext-curl":                                "*",
    "ext-json":                                "*",
    "ext-openssl":                             "*",
    "composer/installers":              "^1.11",
    "vlucas/phpdotenv":                 "^5.3",
    "oscarotero/env":                   "^2.1.0",
    "roots/bedrock-autoloader":         "^1.0",
    "roots/bedrock-disallow-indexing":  "^2.0",
    "roots/wordpress":                  "^6.0",
    "roots/wp-config":                  "1.0.0",
    "roots/wp-password-bcrypt":         "1.0.0",

    "beee4life/b3-onboarding":                 "^3.11.0",
    "hube2/acf-input-counter":                 "^1.0",
    "timber/timber":                           "^2.0",

    "wpackagist-plugin/acf-content-analysis-for-yoast-seo": "^3.0",
    "wpackagist-plugin/classic-editor":                     "^1.0",
    "wpackagist-plugin/classic-widgets":                    "*",
    "wpackagist-plugin/disable-comments":                   "^2.0",
    "wpackagist-plugin/disable-json-api":                   "^1.0",
    "wpackagist-plugin/redirection":                        "^5.3",
    "wpackagist-plugin/regenerate-thumbnails":              "^3.0",
    "wpackagist-plugin/user-role-editor":                   "^4.0",
    "wpackagist-plugin/svg-support":                        "^2.5.0",
    "wpackagist-plugin/wordpress-seo":                      "^25.0",
    "wpackagist-plugin/wp-crontrol":                        "^1.0"
  },
  "require-dev":  {
    "wpackagist-plugin/monkeyman-rewrite-analyzer":   "^1.0",
    "wpackagist-plugin/query-monitor":                "^3.0",
    "phpcompatibility/phpcompatibility-wp":           "^2.1",
    "phpro/grumphp":                                  "^1.2.0",
    "roave/security-advisories":                      "dev-master",
    "squizlabs/php_codesniffer":                      "^3.0.2",
    "wp-coding-standards/wpcs":                       "^2.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1"
  },
  "extra":        {
    "installer-paths":       {
      "web/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "web/app/plugins/{$name}/":    [
        "type:wordpress-plugin"
      ],
      "web/app/themes/{$name}/":     [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "web/cms"
  },
  "scripts":      {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test":                      [
      "phpcs"
    ]
  },
  "config": {
    "allow-plugins": {
      "roots/wordpress-core-installer": true,
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpro/grumphp": true
    }
  }
}
